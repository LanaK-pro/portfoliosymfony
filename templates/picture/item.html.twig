{% extends 'base.html.twig' %}

{% block title %}
    {{ picture.title }}
{% endblock %}

{% block body %}
    <h1 class="tracking-widest text-4xl text-lana m-3">{{ picture.title }}</h1>

    <a href="{{ path('picture_list') }}">
        <div class="my-8 mx-5">
        <kbd class="rtl:rotate-180 inline-flex items-center px-2 py-1.5 text-gray-800 bg-gray-100 border border-gray-200 rounded-lg dark:bg-gray-600 dark:text-gray-100 dark:border-gray-500">
        <svg class="w-2.5 h-2.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 10 16">
            <path d="M8.766.566A2 2 0 0 0 6.586 1L1 6.586a2 2 0 0 0 0 2.828L6.586 15A2 2 0 0 0 10 13.586V2.414A2 2 0 0 0 8.766.566Z"/>
        </svg>
        <span class="sr-only">Arrow key left</span>
    </kbd>
        </div>
    </a>

    {# Image gener√©e dynamiquement via le nom de l'url dans la bdd qui va chercher l'image correspondante dans le dossier images#}
    <div class="flex items-center justify-center h-screen">
        <div class="border border-gray-300 rounded p-3">
            <img class="max-w-md w-full h-auto object-contain px-4" src="{{ asset('/images/' ~ picture.url) }}" alt="blog">
            <div class="p-6">
                <h2 class="tracking-widest text-xs title-font font-medium text-gray-400 mb-1">{{ picture.software }}</h2>
                <h1 class="title-font text-lg font-medium text-lana mb-3">{{ picture.title }}</h1>
                <p class="leading-relaxed mb-3">
                    {{ picture.description }}
                </p>
                <div class="flex items-center flex-wrap">
                </span>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

