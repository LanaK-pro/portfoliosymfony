{% extends 'base.html.twig' %}

{% block title %}
    Toutes mes images
{% endblock %}

{% block body %}
    <h1 class="tracking-widest text-4xl text-gray-500 dark:text-gray-400 m-3">Toutes mes images</h1>


    {% for picture in pictures %}
<div class="flex flex-wrap justify-center">
    <div class="my-24 mx-5 w-96 bg-white bg-opacity-20 backdrop-filter backdrop-blur-lg rounded-lg overflow-hidden shadow-lg">
        <img class="w-full h-48 object-cover" src="{{ asset('/images/' ~ picture.url) }}">
        <div class="p-6">
            <h2 class="text-2xl font-bold mb-2 text-black">{{ picture.title }}</h2>
            <p class="text-gray-700 mb-4 text-black">Description de la carte 1. Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
            <button class="py-2.5 px-5 me-2 mb-2 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700">
                <a href="{{ path('picture_item', { id: picture.id }) }}">En savoir plus</a>
            </button>
        </div>
    </div>
    {% endfor %}



    {% endblock %}




