{% extends 'base.html.twig' %}

{% block title %}Connectez-vous{% endblock %}




{% block body %}

    <h1 class="tracking-widest text-4xl text-lana m-3">Connectez-vous</h1>



    <form method="post" class="max-w-sm mx-auto my-24">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}


        <label for="username" class="block mb-2 text-sm font-medium text-gray-900">Email</label>
        <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control"
               autocomplete="email" required autofocus>
        <label for="password" class="block mb-2 text-sm font-medium text-gray-900">Mot de passe</label>
        <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password"
               required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        <div class="checkbox mb-3">
            <input type="checkbox" name="_remember_me" id="_remember_me">
            <label for="_remember_me">Se souvenir de moi</label>
        </div>

        <button class="text-white bg-blue-700 hover:bg-blue-800 focus:outline-none focus:ring-4 focus:ring-blue-300 font-medium rounded-full text-sm px-5 py-2.5 text-center me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" type="submit">
            Connexion
        </button>
        <a href="{{ path('app_logout') }}" class="text-white bg-red-700 hover:bg-red-800 focus:outline-none focus:ring-4 focus:ring-red-300 font-medium rounded-full text-sm px-5 py-2.5 text-center me-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900">Déconnexion</a>
        {% if app.user %}
            <div class="mb-3">
                Vous êtes connecté en tant que {{ app.user.userIdentifier }}
            </div>
        {% endif %}


    </form>

{% endblock %}
